    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mocha ES6 Tests",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "${relativeFile}",
                "--require",
                "@babel/register",
                "--timeout",
                "999999",
                "--colors"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true
        }
    ]
}